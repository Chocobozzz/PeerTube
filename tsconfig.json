{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./",
    "paths": {
      "@server/*": [ "server/*" ],
      "@shared/*": [ "shared/*" ]
    },
    "typeRoots": [
      "server/typings",
      "node_modules/@types"
    ]
  },
  "references": [
    { "path": "./shared" },
    { "path": "./server" },
    { "path": "./scripts" }
  ],
  "files": ["server.ts"]
}
